<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurfaceContainerHigh" android:layout_marginBottom="8dp"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:id="@+id/courseHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground" android:gravity="center_vertical">

        <TextView
            android:id="@+id/textViewCourseTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Ders Başlığı Metni"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary" /> <ImageView
        android:id="@+id/imageViewExpandIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_expand_more" app:tint="?attr/colorOnSurfaceVariant" android:contentDescription="@string/expand_arrow_description" /> </LinearLayout>

    <LinearLayout
        android:id="@+id/topicsContainerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:background="?attr/colorSurfaceContainer" android:visibility="gone"
        tools:visibility="visible">
    </LinearLayout>
</LinearLayout>